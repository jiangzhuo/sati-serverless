{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "globalSetup": "./test/e2e/setup.ts",
  "globalTeardown": "./test/e2e/teardown.ts",
  "testRegex": "/e2e/.*\\.(e2e-test|e2e-spec).(ts|tsx|js)$",
  "rootDir": "../../",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "!**/*.d.ts",
    "packages/*/src/**/*.{js,jsx,tsx,ts}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": [
    "text",
    "json",
    "lcov"
  ]
}
